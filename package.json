{
  "name": "@demian85/home-server",
  "version": "3.0.0",
  "description": "Smart Home server",
  "main": "build/index.js",
  "engines": {
    "node": "18.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demian85/home-server.git"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/server/index.ts",
    "start:dev": "ts-node -r tsconfig-paths/register src/server/index.ts | pino-pretty",
    "dev": "tsc --watch",
    "lint": "eslint ./src",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest --detectOpenHandles"
  },
  "keywords": [
    "sonoff",
    "smart",
    "home",
    "mqtt",
    "server",
    "esp8266",
    "wemos",
    "domotics",
    "automation",
    "shelly"
  ],
  "author": "Demian Rodriguez",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.2",
    "mqtt": "^4.3.7",
    "pino": "^8.4.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.8.2"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
