{
  "name": "@demian85/home-server",
  "version": "3.0.0",
  "description": "Smart Home server",
  "main": "build/index.js",
  "engines": {
    "node": "18.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demian85/home-server.git"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "webpack -p --progress --env.production",
    "start": "ts-node src/index.js",
    "dev": "tsc --watch",
    "lint": "eslint ./src",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest --forceExit"
  },
  "keywords": [
    "sonoff",
    "smart",
    "home",
    "mqtt",
    "server",
    "esp8266",
    "wemos",
    "domotics",
    "automation",
    "shelly"
  ],
  "author": "Demian Rodriguez",
  "license": "ISC",
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "mqtt": "^4.3.7"
  }
}
